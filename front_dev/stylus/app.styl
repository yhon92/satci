// @import 'nib'
@import 'style'
@import 'dashboard'
// @import 'animate'
@import 'loading-bar'
@import 'ng-alertify'
@import 'ui-select'
@import './theme-ui-select/select2'
@import 'nv.d3'

*, *:focus
  outline none

body
  padding-top 67px
  // background-color #f8f8f8
  background-color #F1F1F1

legend
  margin-bottom 10px

textarea
  resize none

.MenuActions
  &:hover, &:focus
    background-color rgba(186, 231, 238, 0.3)
    border-radius 50%
  &-button
    color inherit
    padding 0 5px 2px 6px
    &:hover, &:focus
      color initial
  &-list
    // left -14px
    min-width 50px
    left -105px
    top -4px
    min-width 50px
    padding 0
    border 1px solid rgba(0,0,0,0.15)
    box-shadow none
  &-item
    display inline-block
  &-action
    padding 3px 10px !important
  
.btn-circle
  border-radius 50%
  box-shadow 0 2px 5px 0 rgba(0,0,0,.26)
  width 35px
  height 35px
  padding 0
  margin 0em .5em

.form-label
  font-size 14px
  text-align left
  color #2196f3
  padding-top 4px
  margin-bottom 5px

.margin-none
  margin 0

.form-group
  margin-bottom 5px

.padding
  &-right
    padding-right 5px
  &-left
    padding-left 5px !important
  &-none
    padding 0
  

.navbar-brand
  padding 5px 15px

.navbar-brand img, .navbar-brand span
  display inline-block
  vertical-align middle

.sidebar
  background-color white
  box-shadow 0 1px 5px rgba(0, 0, 0, 0.3)
  border-right none

.st-selected
  // background #216eff !important
  background #2196F3 !important
  color white !important

.pointer
  cursor pointer

.align
  &-top
    vertical-align top
  &-center
    text-align center
  &-middle
    vertical-align middle

.table
  select, input[type=text]
    padding 0 0 1px 0
    font-size inherit
    height initial
  
.table
  &-medium
    max-height 390px
  &-small
    max-height 260px

.modal
  &-header
    padding 5px 15px
    .close
      margin-top 5px
    .border-bottom
      border-bottom solid 1px #DDDDDD
  &-body
    padding 0 15px

.pagination
  margin 10px 0

.inline-block
  display inline-block

.display
  &-block
    display block
  &-none
    display none

.border-right
  border-right solid 1px #BBBBBB
  padding-right 10px

ui-select
.ui-select
  &-search
    width 100% !important
  &-choices-group-label
    color black
    font-weight bold

.button-status
  float left
  display inline-block
  border-radius 50%
  width 10px
  height 10px
  margin-top 7px
  margin-right 10px

.list-none
  list-style none

.float-right
  float right
  box-sizing border-box

.ButtonSearch
  margin-top -3px

.ListGroup
  margin 0
  
  &-item
    border-left solid 2px transparent
    border-right none
    padding 5px 15px
    
    /*&:first-child
      border-top none*/
    &:hover
      // border-left solid 2px #4caf50
      border-left solid 2px #9c27b0
      // background #f5f5f5
        
.btn-add-float
  border-radius 50%
  font-size 2em
  font-weight bold
  position fixed
  bottom 0
  right 0
  margin-bottom 25px
  margin-right 25px
  height 56px
  width 56px
  box-shadow 0 0 4px rgba(0,0,0,.14),0 4px 8px rgba(0,0,0,.28)
  z-index 1000
  
  img
    margin-bottom 8px
    height 24px
    width 24px  
    
.img-btn-add
  margin-bottom 2px
  height 24px
  width 24px

.panel-body
  blockquote
    border-left 4px solid #C6C6C6
    font-size inherit
    margin 0 0 1em
    padding .5em
    &.primary
      background-color rgba(216, 239, 255, 0.36)
      border-left 4px solid #C6C6C6
      border-left 4px solid rgba(33, 150, 243, 0.5)
    &.success
      background-color rgba(217, 255, 216, 0.36)
      border-left 4px solid #4CAF50
      border-left 4px solid rgba(76, 175, 80, 0.5)
    &.error
      background-color rgba(255, 216, 216, 0.36)
      border-left 4px solid #E51C23
      border-left 4px solid rgba(229, 28, 35, 0.5)
      
    small
      font-size inherit

.radio-inline
  padding-top 0 !important
.radio
  padding-top 4px !important
  