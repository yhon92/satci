// @import 'nib'
@import 'style'
@import 'dashboard'
// @import 'animate'
@import 'loading-bar'
@import 'ng-alertify'
@import 'ui-select'
@import './theme-ui-select/select2'

*, *:focus
  outline none

body
  padding-top 67px
  background-color #f8f8f8

legend
  margin-bottom 10px

textarea
  resize none

.MenuActions
  &-button
    color inherit
    &:hover, &:focus
      color initial
  &-list
    min-width 50px
  // &-item
  // &-action
  
.btn-circle
  border-radius 50%
  box-shadow 0 2px 5px 0 rgba(0,0,0,.26)
  width 35px
  height 35px
  padding 0
  margin 0em .5em

.form-label
  font-size 14px
  text-align left
  color #2196f3
  padding-top 4px
  margin-bottom 5px

.margin-none
  margin 0

.form-group
  margin-bottom 5px

.padding
  &-right
    padding-right 5px
  &-left
    padding-left 5px !important
  &-none
    padding 0
  

.navbar-brand
  padding 5px 15px

.navbar-brand img, .navbar-brand span
  display inline-block
  vertical-align middle

.sidebar
  background-color white
  box-shadow 0 1px 5px rgba(0, 0, 0, 0.3)
  border-right none

.st-selected
  // background #216eff !important
  background #2196F3 !important
  color white !important

.pointer
  cursor pointer

.align
  &-top
    vertical-align top
  &-center
    text-align center
  &-middle
    vertical-align middle

.table
  select, input[type=text]
    padding 0 0 1px 0
    font-size inherit
    height initial
  
.table
  &-medium
    max-height 390px
  &-small
    max-height 260px

.modal
  &-header
    padding 5px 15px
    .close
      margin-top 5px
  &-body
    padding 0 15px
    
.pagination
  margin 10px 0

.inline-block
  display inline-block

.display
  &-block
    display block
  &-none
    display none

.border-right
  border-right solid 1px #BBBBBB
  padding-right 10px

ui-select
.ui-select
  &-search
    width 100% !important
  &-choices-group-label
    color black
    font-weight bold

.button-status
  float left
  display inline-block
  border-radius 50%
  width 10px
  height 10px
  margin-top 7px
  margin-right 10px

.list-none
  list-style none

.float-right
  float right
  
.CategoryList
  margin 0
  
  &-item
    border-left solid 2px transparent
    border-right none
    padding 5px 15px
    
    /*&:first-child
      border-top none*/
    &:hover
      // border-left solid 2px #4caf50
      border-left solid 2px #9c27b0
      // background #f5f5f5
        
.btn-add-float
  border-radius 50%
  font-size 2em
  font-weight bold
  position fixed
  bottom 0
  right 0
  margin-bottom 25px
  margin-right 25px
  height 56px
  width 56px
  box-shadow 0 0 4px rgba(0,0,0,.14),0 4px 8px rgba(0,0,0,.28)
  z-index 1000
  
  img
    margin-bottom 8px
    height 24px
    width 24px  
    
.img-btn-add
  margin-bottom 2px
  height 24px
  width 24px